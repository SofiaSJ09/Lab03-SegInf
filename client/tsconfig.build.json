{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": false,
      "outDir": "./dist",
      "allowImportingTsExtensions": false
    },
    "include": ["src"],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "src/test/**",
      "src/**/*.test.ts",
      "src/**/*.test.tsx"
    ]
  }
  